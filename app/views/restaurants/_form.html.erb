<%= form_for (@restaurant) do |f| %>
<div class="field">
	<%= f.label :name %>
	<%= f.text_field :name %><br>
</div>
<div class="field">
	<%= f.label :capacity %> 
	<%= f.number_field :capacity %><br>
</div>
<div class="field">
	<%= f.label :opens_at %> 
	<%= f.time_select(:opens_at, discard_minute: true) %>	<br>
</div>
<div class="field">
	<%= f.label :closes_at %> 
	<%= f.time_select(:closes_at, discard_minute: true) %><br>	
</div>
<div class="field">
	<%= f.label :description %> 
	<%= f.text_field :description %><br>	
</div>
<div class="field">
	<%= f.label :address %> 
	<%= f.text_field :address %><br>	
</div>
<div class="field">
	<%= f.label :phone %> 
	<%= f.text_field :phone %>	<br>
	<br>
</div>
	<div class="field">
	<%= f.submit %>
</div>
<% end %>